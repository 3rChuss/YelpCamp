<%- include('../partials/header') %>
    <header class="jumbotron text-left bg-light">
        <div class="container">
            <h1 id="indexTitle"><i class="fas fa-campground"></i>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds</p>
            <p><a class="btn-lg btn-primary btn"href="campgrounds/new"rel="noopener noreferrer">Add new Campground</a></p>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach((site) => {%>
            <div class="col-md-4 col-sm-6">
                <div class="card text-center">
                    <img class="card-img-top" src="<%=site.image%>" alt="">
                    <div class="card-body">
                        <h4 class="card-title"><%= site.name %></h4>
                        <a class="btn btn-primary" href="campgrounds/<%= site._id %>">More info</a>
                    </div>
                </div>
            </div>
        <% })%>
    </div>
    
<%- include('../partials/footer') %>